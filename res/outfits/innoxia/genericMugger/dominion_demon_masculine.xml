<?xml version="1.0" encoding="utf-8" standalone="no"?>
<!-- Look in the mods folder for a commented version of this. -->
<outfit>
	<coreAttributes>
		<name><![CDATA[generic mugger (masculine)]]></name>
		
		<description><![CDATA[Simple clothing, with the possibility of a weapon or two...]]></description>
		
		<femininity>MASCULINE</femininity>
		
		<worldTypes>
			<world>DOMINION</world>
		</worldTypes>
		
		<outfitTypes>
		  <type>MUGGER</type>
		</outfitTypes>
		
		<acceptableLegConfigurations/>
		
		<conditional><![CDATA[npc.getTrueSubspecies()==SUBSPECIES_DEMON]]></conditional>
		
		<weight>100</weight>
	</coreAttributes>
	
	<generationAttributes>
		<condWeapons constant="true"><![CDATA[RND.nextInt(100)<=100]]></condWeapons>
		<condDagger constant="true"><![CDATA[RND.nextInt(100)<=5]]></condDagger>
		<condDualWielding constant="true"><![CDATA[RND.nextInt(100)<=100]]></condDualWielding>
		
		<condPlantigrade constant="true"><![CDATA[npc.getLegConfiguration()==LEG_CONFIGURATION_BIPEDAL && npc.getFootStructure()==FOOT_STRUCTURE_PLANTIGRADE]]></condPlantigrade>
		<condExhibitionist constant="true"><![CDATA[npc.hasFetish(FETISH_EXHIBITIONIST)]]></condExhibitionist>
		<condSuit constant="true"><![CDATA[npc.getHistory()==OCCUPATION_NPC_OFFICE_WORKER || npc.getHistory()==OCCUPATION_NPC_BUSINESS_OWNER || npc.getHistory()==OCCUPATION_NPC_TEACHER]]></condSuit>
		
		
		<presetColourGroup1 singleColour="true">
			<randomColour>CLOTHING_PURPLE_VERY_DARK</randomColour>
			<randomColour>CLOTHING_PURPLE_ROYALE</randomColour>
		</presetColourGroup1>
		
		<presetColourGroup2 singleColour="true">
			<randomColour>CLOTHING_BLUE_NAVY</randomColour>
			<randomColour>CLOTHING_RED_BURGUNDY</randomColour>
		</presetColourGroup2>
		
		<presetColourGroup3 singleColour="true">
			<randomColour>CLOTHING_PERIWINKLE</randomColour>
			<randomColour>CLOTHING_BROWN_DARK</randomColour>
		</presetColourGroup3>
		
        <mainWeapons>
			<weapon>
				<conditional><![CDATA[condWeapons && condDagger && condDualWielding]]></conditional>
				<types>
					<type>innoxia_dagger_dagger</type>
				</types>
				<damageTypes>
					<damage>FIRE</damage>
					<damage>ICE</damage>
					<damage>POISON</damage>
				</damageTypes>
				<primaryColours/>
				<secondaryColours/>
			</weapon>
			<weapon>
				<conditional><![CDATA[condWeapons && !condDagger && condDualWielding]]></conditional>
				<type>innoxia_crystal_epic</type>
				<damageTypes>
					<damage>FIRE</damage>
					<damage>ICE</damage>
					<damage>POISON</damage>
				</damageTypes>
				<primaryColours/>
				<secondaryColours/>
			</weapon>
        </mainWeapons>
		
        <offhandWeapons>
			<weapon>
				<conditional><![CDATA[condWeapons && condDualWielding]]></conditional>
				<types>
					<type>innoxia_feather_epic</type>
				</types>
				<damageTypes>
					<damage>FIRE</damage>
					<damage>ICE</damage>
					<damage>POISON</damage>
				</damageTypes>
				<primaryColours/>
				<secondaryColours/>
			</weapon>
        </offhandWeapons>
		
		
		<guaranteedClothingEquips/>
		
		
		<genericClothingType> <!-- Generic jewellery. -->
			<itemTags/>
			<acceptableFemininities>
				<femininity>ANDROGYNOUS</femininity>
				<femininity>MASCULINE</femininity>
			</acceptableFemininities>
			<slot/>
			<rarity>COMMON</rarity>
			<conditional><![CDATA[clothing.getSlot().isJewellery() && (RND.nextInt(100)<=25 || clothing.getSlot()==IS_PIERCING_EAR)]]></conditional>
			<primaryColours/>
			<secondaryColours/>
			<tertiaryColours/>
		</genericClothingType>
		
		<clothingType>
			<conditional><![CDATA[!condExhibitionist]]></conditional>
			<types>
				<type>WRIST_MENS_WATCH</type>
			</types>
			<primaryColours>
				<colour>CLOTHING_PLATINUM</colour>
			</primaryColours>
			<secondaryColours/>
			<tertiaryColours/>
		</clothingType>
		
		
		<!-- Casual Ourfit: -->
		
		<clothingType>
			<conditional><![CDATA[!condSuit && !condExhibitionist]]></conditional>
			<types>
				<type>innoxia_leg_trousers</type>
			</types>
			<primaryColours>
				<colour>CLOTHING_TAN</colour>
			</primaryColours>
			<secondaryColours/>
			<tertiaryColours/>
		</clothingType>
		
		<clothingType>
			<conditional><![CDATA[!condExhibitionist]]></conditional>
			<types>
				<type>GROIN_BRIEFS</type>
				<type>GROIN_BOXERS</type>
			</types>
			<primaryColours>
				<colour>CLOTHING_BLACK</colour>
			</primaryColours>
			<secondaryColours/>
			<tertiaryColours/>
		</clothingType>
		
		<clothingType>
			<conditional><![CDATA[!condSuit && !condExhibitionist]]></conditional>
			<types>
				<type>TORSO_TSHIRT</type>
			</types>
			<primaryColours>
				<colour>CLOTHING_WHITE</colour>
			</primaryColours>
			<secondaryColours/>
			<tertiaryColours/>
		</clothingType>
		
		<clothingType>
			<conditional><![CDATA[!condSuit && !condExhibitionist]]></conditional>
			<types>
				<type>nerdlinger_mens_leather_jacket_mens_leather_jacket</type>
				<type>TORSO_RIBBED_SWEATER</type>
			</types>
			<primaryColours>
				<colour>presetColourGroup1</colour>
			</primaryColours>
			<secondaryColours/>
			<tertiaryColours/>
		</clothingType>
		
		<clothingType>
			<conditional><![CDATA[RND.nextInt(100)<=80]]></conditional>
			<types>
				<type>innoxia_eye_glasses</type>
				<type>innoxia_eye_aviators</type>
			</types>
			<primaryColours>
				<colour>CLOTHING_PLATINUM</colour>
			</primaryColours>
			<secondaryColours/>
			<tertiaryColours/>
		</clothingType>
		
		<clothingType>
			<conditional><![CDATA[condPlantigrade]]></conditional>
			<types>
				<type>SOCK_SOCKS</type>
			</types>
			<primaryColours values="BLACK_OR_WHITE"/>
			<secondaryColours/>
			<tertiaryColours/>
		</clothingType>
		
		<clothingType>
			<conditional><![CDATA[!condExhibitionist]]></conditional>
			<types>
				<type>innoxia_hips_leather_belt</type>
				<type>innoxia_foot_mens_smart_shoes</type>
			</types>
			<primaryColours>
				<colour>presetColourGroup3</colour>
			</primaryColours>
			<secondaryColours/>
			<tertiaryColours/>
		</clothingType>
		
		
		<!-- Suit outfit: -->
		
		<clothingType>
			<conditional><![CDATA[condSuit && !condExhibitionist]]></conditional>
			<types>
				<type>innoxia_torsoOver_suit_jacket</type>
				<type>innoxia_leg_trousers</type>
			</types>
			<primaryColours>
				<colour>presetColourGroup1</colour>
			</primaryColours>
			<secondaryColours/>
			<tertiaryColours/>
		</clothingType>
		
		<clothingType>
			<conditional><![CDATA[condSuit && !condExhibitionist]]></conditional>
			<types>
				<type>innoxia_torso_long_sleeved_shirt</type>
			</types>
			<primaryColours>
				<colour>presetColourGroup2</colour>
			</primaryColours>
			<secondaryColours/>
			<tertiaryColours/>
		</clothingType>
		
		<clothingType>
			<conditional><![CDATA[condSuit && !condExhibitionist]]></conditional>
			<types>
				<type>innoxia_neck_tie</type>
			</types>
			<primaryColours/>
			<secondaryColours/>
			<tertiaryColours/>
		</clothingType>
		
		
		<!-- Exhibitionist Outfit: -->
		
		<clothingType>
			<conditional><![CDATA[condExhibitionist]]></conditional>
			<types>
				<type>innoxia_leg_assless_chaps</type>
				<type>innoxia_leg_crotchless_chaps</type>
			</types>
			<primaryColours>
				<colour>presetColourGroup1</colour>
			</primaryColours>
			<secondaryColours/>
			<tertiaryColours/>
		</clothingType>
		
		<clothingType>
			<conditional><![CDATA[condExhibitionist]]></conditional>
			<types>
				<type>innoxia_neck_collar_bowtie</type>
				<type>.WRIST_SUIT_CUFFS</type>
			</types>
			<primaryColours/>
			<secondaryColours/>
			<tertiaryColours/>
		</clothingType>
		
	</generationAttributes>

</outfit>